extends layout

block content
  h1.mt-3='ðŸ’ª FAB Check In ðŸ¥¦'

  form(method='POST' action='')
    div.form-group
      label(for='user') Name:
      input#user.form-control(type='text', placeholder='Just your first name..' name='user' required='true' value=user )
      label(for='weight') Weight (If you feel like sharing):
      input#weight.form-control(type='text', placeholder='#, or "Down a pound today!" etc..' name='weight' value=weight )
      label(for='activity') Activity (Make sure you're at least MOVING! ðŸ‘Ÿ): 
      input#activity.form-control(type='text', placeholder='Step Count, or "Went on a walk today" etc..' name='activity' value=activity )
      label(for='update') Update (Anything else you feel like sharing):
      input#update.form-control(type='text', placeholder='e.g. Wow Scott is handsome ðŸ˜³..', name='update' value=update )
      label(for='effect') Send with an Effect! (Default is no defect):
      br
      select#effect.select.form-control(name='effect')
        each value, key in effects
          option(value=value) #{key}
    button.btn.btn-primary(type='submit') Submit
    div.form-group.d-none
      label(for='password') Password: 
      input#password.form-control(type='text', name='password' value=parameterPW )
  
  br
  if errors 
    h3.text-danger='Error:'
    ul
      for error in errors
        li.text-danger!= error.msg

  br
  p='Updates shared before ' + shareTime + ' will post at ' + shareTime + '. Updates shared after '+ shareTime +' will post tomorrow.'